// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/alpine
{
	"name": "Alpine",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:alpine",
	"features": {
		"ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-bash:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-bun:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-curl:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-gh-cli:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-git:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-gpg:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-nano:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-node:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-ohmyzsh:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-openssh:0": {}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	"customizations": { "vscode": {
      "extensions": [
        "Alexey-Strakh.stackoverflow-search",
        "DavidAnson.vscode-markdownlint",
        "Mukundan.python-docs",
        "PascalReitermann93.vscode-yaml-sort",
        "Tock.vscode-css-custom-properties",
        "Tyriar.sort-lines",
        "VisualStudioExptTeam.intellicode-api-usage-examples",
        "VisualStudioExptTeam.vscodeintellicode",
        "WallabyJs.quokka-vscode",
        "YoavBls.pretty-ts-errors",
        "ZainChen.json",
        "Zignd.html-css-class-completion",
        "almenon.birdseye-vscode",
        "anteprimorac.html-end-tag-labels",
        "antfu.iconify",
        "charliermarsh.ruff",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "cmstead.js-codeformer",
        "cmstead.jsrefactor",
        "dbaeumer.vscode-eslint",
        "donjayamanne.githistory",
        "donjayamanne.python-environment-manager",
        "donjayamanne.python-extension-pack",
        "ecmel.vscode-html-css",
        "eriklynd.json-tools",
        "evgeniypeshkov.syntax-highlighter",
        "fill-labs.dependi",
        "firefox-devtools.vscode-firefox-debug",
        "formulahendry.auto-rename-tag",
        "hbenl.vscode-test-explorer",
        "jock.svg",
        "kakumei.ts-debug",
        "kamikillerto.vscode-linthtml",
        "leizongmin.node-module-intellisense",
        "littlefoxteam.vscode-python-test-adapter",
        "mads-hartmann.bash-ide-vscode",
        "minherz.copyright-inserter",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.test-adapter-converter",
        "njpwerner.autodocstring",
        "njqdev.vscode-python-typehint",
        "oderwat.indent-rainbow",
        "pamaron.pytest-runner",
        "qcz.text-power-tools",
        "redhat.vscode-yaml",
        "remcohaszing.schemastore",
        "rogalmic.bash-debug",
        "shakram02.bash-beautify",
        "sourcery.sourcery",
        "stylelint.vscode-stylelint",
        "tamasfe.even-better-toml",
        "tberman.json-schema-validator",
        "tekumara.typos-vscode",
        "timonwong.shellcheck",
        "travis71i.clean-css-vscode",
        "wholroyd.jinja",
        "wix.vscode-import-cost",
        "wmontalvo.vsc-jsonsnippets",
        "yzhang.markdown-all-in-one"
      ]
    }
  },

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8000],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",
  "containerEnv": {
    "PATH": "${HOME}/.local/share/uv/python/cpython-3.13.0-linux-x86_64-gnu/bin:${HOME}/.local/bin:${HOME}/.bun/bin:${HOME}/bin:${HOME}/sbin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
    "UV_LINK_MODE": "copy",
    "UV_COMPILE_BYTECODE": "1",
    "FORCE_COLOR": "1",
    "CLICOLOR_FORCE": "1",
    "UV_PYTHON": "cpython-3.13.0-linux-x86_64-gnu",
    "UV_PYTHON_PREFERENCE": "only-managed",
    "BUN_INSTALL": "$HOME/.bun",
    "PYVENV": "/workspaces/PlainLicense/.venv/bin/activate",
    "UV_CACHE_DIR": "/workspaces/PlainLicense/.cache/uv"
  }
}

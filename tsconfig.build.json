{
  "buildOptions": {
    "outDir": "./tools",
    "rootDir": "./tools"
  },
  "compilerOptions": {
    "rootDir": "./src/build",
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "lib": [
      "ESNext"
    ],
    "outDir": "./tools/build",
    "pretty": true,
    "target": "ESNext",
    "composite": true,
    "disableSolutionSearching": true
  },
  "exclude": [
    "./node_modules"
  ],
  "files": [
    "src/build/index.ts"
  ],
  "include": [
    "src/build/index.ts",
    "src/build/**/*.ts",
    "./node_modules/sass/types/*.ts",
  ]
}

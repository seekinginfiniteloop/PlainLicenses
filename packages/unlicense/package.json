{
  "name": "plain-license-unlicense",
  "version": "0.1.0",
  "private": true,
  "description": "Plain language version of the Unlicense",
  "scripts": {
    "release": "semantic-release"
  },
  "main": "../../docs/licenses/public-domain/unlicense/index.md",
  "dependencies": {
    "@commitlint/cli": "^19.5.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "dev",
        "prerelease": true,
        "channel": "pre/rc"
      }
    ],
    "plugins": [
      ["@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "breaking": true, "release": "major" },
          { "type": "stable", "release": "major" },
          { "type": "new", "release": "minor" },
          { "type": "subs", "release": "minor" },
          { "type": "admin", "release": "patch" },
          { "revert": true, "release": "patch"},
          { "type": "bot", "release": false },
          { "scope": "release", "release": true }
        ],
      "parserOpts": {
        "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING", "BREAKING-CHANGE"]
      }
    }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "../changelogs/unlicense.md",
        "changelogTitle": "Plain Unlicense Changelog"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "../changelogs/unlicense.md"
        ]
      }
    ]
    ]
  }
}

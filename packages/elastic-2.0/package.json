{
  "name": "plain-license-elastic-2.0",
  "version": "0.1.0",
  "private": true,
  "description": "Plain language version of Elastic License 2.0",
  "scripts": {
    "release": "semantic-release"
  },
  "main": "../../docs/licenses/source-available/elastic-2.0/index.md",
  "dependencies": {
    "@commitlint/cli": "^19.5.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "dev",
        "prerelease": true,
        "channel": "pre/rc"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            { "type": "stable", "release": "major" },
            { "type": "new", "release": "minor" },
            { "type": "subs", "release": "minor" },
            { "type": "admin", "release": "patch" },
            { "type": "bot", "release": false }
          ],
          "parserOpts": {
            "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING", "BREAKING-CHANGE"]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "../changelogs/unlicense.md",
          "changelogTitle": "Plain Elastic 2.0 Changelog"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "../changelogs/elastic-2.0.md"
          ]
        }
      ]
    ]
  }
}

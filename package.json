{
  "name": "plain-license",
  "version": "0.0.0-development",
  "description": "Plain language versions of popular licenses",
  "private": true,
  "workspaces": [
    "packages/*/package.json"
  ],
  "main": "packages/plainlicense",
  "bin": {
    "setup-repo": "bin/setup-repo.sh",
    "install-hooks": "bin/install-hooks.sh",
  },
  "directories": {
    "site": "docs",
    "source": "src",
    "custom-theme": "overrides",
    "external": "external",
    "ci": ".github",
    "dev-scripts": "scripts",
    "dev-container": ".devcontainer"
  },
  "scripts": {
    "commit": "bun run -b git-cz",
    "release": "bun run -b semantic-release",
    "check": "bun run check:build && bun run check:style:css && bun run check:style:ts && bun run check:style:markdown",
    "check:build": "tsc --noEmit",
    "check:style:css": "bun run -b stylelint \"src/**/*.css\"",
    "check:style:ts": "bun run -b eslint --cache \"src/**/*.ts\" \"*.ts\" \"*.mjs\"",
    "check:style:markdown": "bunx -b markdownlint-cli2 --fix --config .markdownlint.yml \"*.md\" \"docs/**/*.md\" \"docs/*.md\" \"packages/changelogs/*.md\"",
    "fix": "bun run fix:style:css && bun run fix:style:ts",
    "fix:style:css": "bun run -b stylelint --fix \"src/**/*.css\"",
    "fix:style:ts": "bun run -b eslint --cache --fix \"src/**/*.ts\" \"*.ts\" \"*.mjs\"",
    "build": "bun run src/build/index.ts",
    "runall": "pre-commit run -a && bun run check && bun run fix && bun run build",
    "upgrade": "bun update && uv sync --upgrade && pre-commit autoupdate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seekinginfiniteloop/PlainLicense.git"
  },
  "keywords": [
    "legal",
    "license",
    "mkdocs",
    "mkdocs-material",
    "plain language"
  ],
  "author": {
    "name": "Adam Poulemanos",
    "email": "adam@plainlicense.org"
  },
  "license": "Plain Unlicense",
  "bugs": {
    "url": "https://github.com/seekinginfiniteloop/PlainLicense/issues",
    "email": "adam@plainlicense.org"
  },
  "engines": {
    "node": ">= 20"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "bun": "^1.1.34",
    "commitizen": "^4.3.1",
    "commitlint-plugin-selective-scope": "^1.0.1",
    "eslint-js": "eslint/js",
    "inquirer": "^9.3.7",
    "issue-parser": "^7.0.1",
    "lerna": "^8.1.9",
    "markdownlint-cli2": "^0.14.0",
    "node": "^22.11.0",
    "semantic-release": "^24.2.0"
  },
  "peerDependencies": {
    "@commitlint/lint": "^19.5.0",
    "semantic-release": "^24.2.0"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "dev",
        "prerelease": true,
        "channel": "pre/rc"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "stable",
              "release": "major"
            },
            {
              "type": "subs",
              "release": "minor"
            },
            {
              "type": "admin",
              "release": "patch"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "new",
              "scope": "content",
              "release": "minor"
            },
            {
              "type": "new",
              "scope": "ui",
              "release": "patch"
            },
            {
              "type": "new",
              "release": "patch"
            },
            {
              "scope": "scripts",
              "release": "patch"
            },
            {
              "type": "bot",
              "release": false
            },
            {
              "type": "chore",
              "release": false
            },
            {
              "scope": "infra",
              "release": false
            },
            {
              "scope": "deps",
              "release": false
            },
            {
              "scope": "blog",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator"
      ],
      [
        "@semantic-release/github"
      ]
    ]
  }
}

{
  "name": "plain-license",
  "version": "0.0.0-development",
  "description": "Plain language versions of popular licenses",
  "private": true,
  "workspaces": [
    "packages/*/package.json"
  ],
  "main": "packages/plainlicense",
  "bin": {
    "setup-repo": "bin/setup-repo.sh",
    "install-hooks": "bin/install-hooks.sh"
  },
  "directories": {
    "site": "docs",
    "source": "src",
    "custom-theme": "overrides",
    "external": "external",
    "ci": ".github",
    "dev-scripts": "bin",
    "dev-container": ".devcontainer"
  },
  "scripts": {
    "commit": "bun run -b git-cz",
    "release": "bun run -b semantic-release",
    "check": "bun run check:build && bun run check:style:css && bun run check:style:ts && bun run check:style:markdown && bun run check:style:html && bun run check:style:python",
    "check:build": "tsc --noEmit",
    "check:style:css": "bun run -b stylelint \"src/**/*.css\"",
    "check:style:ts": "bun run -b eslint --cache \"src/**/*.ts\" \"*.ts\" \"*.mjs\"",
    "check:style:markdown": "bunx -b markdownlint-cli2 --fix --config .markdownlint.yml \"*.md\" \"docs/**/*.md\" \"docs/*.md\" \"packages/changelogs/*.md\"",
    "check:style:html": "bunx -b linthtml --config .linthtmlrc.yaml \"*.html\" \"overrides/**/*.html\" \"overrides/*.html\"",
    "check:style:python": "ruff --config ruff.toml \"*.py\" \"overrides/hooks/*.py\" \"bin/*.py\" check",
    "fix": "bun run fix:style:css && bun run fix:style:ts && bun run fix:style:markdown && bun run fix:style:html && bun run fix:style:python",
    "fix:style:css": "bun run -b stylelint --fix \"src/**/*.css\"",
    "fix:style:ts": "bun run -b eslint --cache --fix \"src/**/*.ts\" \"commitlint.config.ts\" \"*.mjs\"",
    "fix:style:markdown": "bunx -b markdownlint-cli2 --fix --config .markdownlint.yml \"*.md\" \"docs/**/*.md\" \"docs/*.md\" \"packages/changelogs/*.md\"",
    "fix:style:html": "bunx -b linthtml --fix --config .linthtmlrc.yaml \"*.html\" \"overrides/**/*.html\" \"overrides/*.html\"",
    "fix:style:python": "ruff --config ruff.toml \"*.py\" \"overrides/hooks/*.py\" \"bin/*.py\" format",
    "build": "bun run src/build/index.ts",
    "runall": "bun run check && bun run fix && bun run build",
    "upgrade": "bun upgrade && bun update && uv sync --all-extras --upgrade && pre-commit autoupdate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seekinginfiniteloop/PlainLicense.git"
  },
  "keywords": [
    "legal",
    "license",
    "mkdocs",
    "mkdocs-material",
    "plain language"
  ],
  "author": {
    "name": "Adam Poulemanos",
    "email": "adam@plainlicense.org"
  },
  "license": "Plain Unlicense",
  "bugs": {
    "url": "https://github.com/seekinginfiniteloop/PlainLicense/issues",
    "email": "adam@plainlicense.org"
  },
  "engines": {
    "node": ">= 20"
  },
  "devDependencies": {
    "@asn.aeb/esbuild-css-modules-plugin": "^0.1.9",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "9.17.0",
    "@linthtml/linthtml": "^0.10.1",
    "@types/dom-navigation": "^1.0.4",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "bun": "^1.1.38",
    "commitizen": "^4.3.1",
    "commitlint": "^19.6.0",
    "commitlint-plugin-selective-scope": "^1.0.1",
    "esbuild": "^0.24.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-tsconfig-paths": "^1.0.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.6.0",
    "glob": "^11.0.1",
    "inquirer": "^9.3.7",
    "issue-parser": "^7.0.1",
    "jest": "^29.7.0",
    "jsdom": "^25.0.1",
    "lerna": "^8.1.9",
    "lines-and-columns": "^2.0.4",
    "markdownlint-cli2": "^0.17.1",
    "node": "^23.5.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "semantic-release-cli": "^5.4.6",
    "stylelint": "^16.11.0",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@commitlint/lint": "^19.6.0",
    "semantic-release": "^24.2.0"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "dev",
        "prerelease": true,
        "channel": "pre/rc"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "stable",
              "release": "major"
            },
            {
              "type": "subs",
              "release": "minor"
            },
            {
              "type": "admin",
              "release": "patch"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "new",
              "scope": "content",
              "release": "minor"
            },
            {
              "type": "new",
              "scope": "ui",
              "release": "patch"
            },
            {
              "type": "new",
              "release": "patch"
            },
            {
              "scope": "scripts",
              "release": "patch"
            },
            {
              "type": "bot",
              "release": false
            },
            {
              "type": "chore",
              "release": false
            },
            {
              "scope": "infra",
              "release": false
            },
            {
              "scope": "deps",
              "release": false
            },
            {
              "scope": "blog",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator"
      ],
      [
        "@semantic-release/github"
      ]
    ]
  },
  "dependencies": {
    "gsap": "^3.12.5"
  }
}

{
  "name": "plain-license",
  "version": "0.0.0-development",
  "description": "Plain language versions of popular licenses",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "packages/plainlicense",
  "bin": {
    "update-subs": ".github/src/update-submodules.sh",
    "build-assets": "src/build/index.ts"
  },
  "directories": {
    "site": "docs",
    "source": "src",
    "custom-theme": "overrides",
    "external": "external",
    "ci": ".github",
    "dev-scripts": "scripts",
    "dev-container": ".devcontainer"
  },
  "scripts": {
    "prepare": "husky",
    "release": "semantic-release",
    "generate-changelog": "node .github/",
    "check:build": "tsc --noEmit",
    "check:style:css": "stylelint \"src/**/*.css\"",
    "check:style:ts": "eslint --cache \"src/**/*.ts\"",
    "fix:style:css": "stylelint --fix \"src/**/*.css\"",
    "fix:style:ts": "bunx eslint --cache \"src/**/*.ts\" --fix",
    "build": "bun run src/build/index.ts",
    "upgrade": "bun update"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seekinginfiniteloop/PlainLicense.git"
  },
  "keywords": [
    "legal",
    "license",
    "mkdocs",
    "mkdocs-material",
    "plain language"
  ],
  "author": {
    "name": "Adam Poulemanos",
    "email": "adam@plainlicense.org"
  },
  "license": "Plain Unlicense",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit $1"
    }
  },
  "bugs": {
    "url": "https://github.com/seekinginfiniteloop/PlainLicense/issues",
    "email": "adam@plainlicense.org"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "bun": "^1.1.33",
    "husky": "^9.1.6",
    "issue-parser": "^7.0.1",
    "lerna": "^8.1.8",
    "lerna-changelog": "^2.2.0",
    "semantic-release": "^24.2.0"
  },
  "peerDependencies": {
    "@commitlint/lint": "^19.5.0",
    "semantic-release": "^24.2.0"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "dev",
        "prerelease": true,
        "channel": "pre/rc"
      }
    ],
    "plugins": [
      ["@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "breaking": true, "release": "major" },
          { "type": "stable", "release": "major" },
          { "type": "new", "release": "minor" },
          { "type": "subs", "release": "minor" },
          { "type": "admin", "release": "patch" },
          { "type": "fix", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "new", "scope": "content", "release": "minor" },
          { "type": "new", "scope": "ui", "release": "patch"},
          { "scope": "scripts", "release": "patch"},
          { "revert": true, "release": "patch"},
          { "type": "bot", "release": false },
          { "type": "chore", "release": false },
          { "scope": "infra", "release": false },
          { "scope": "deps", "release": false},
          { "scope": "blog", "release": false },
          { "scope": "no-release", "release": false },
          { "scope": "release", "release": false }
        ],
      "parserOpts": {
        "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING", "BREAKING-CHANGE"]
      }
    }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING", "BREAKING-CHANGE"]
        }
      }
    ]
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "node update-version.js ${nextRelease.version} && node generate-changelog.js"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/licenses/**/**/index.md",
            "CHANGELOG.md",
            "docs/licenses/**/**/CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "preset": "angular"
  }
}

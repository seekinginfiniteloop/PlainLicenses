{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "outDir": "docs/assets/",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext",
      "WebWorker",
      "es2020",
      "es2018"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "paths": {
      "~/*": [
        "./src/assets/javascripts/*",
        "./external/mkdocs-material/src/templates/assets/javascripts/*"
      ],
      "@/*": [
        "./external/mkdocs-material/src/templates/assets/javascripts/*"
      ],
      "~external/*": [
        "./typings"
      ],
      "_/*": [
        "./external/mkdocs-material/material/overrides/assets/javascripts/*"
      ]
    },
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "es2020",
  },
  "include": [
    "src/**/*.ts",
    "./external/mkdocs-material/typings",
    "src/assets/javascripts/@types/*.d.ts"
  ],
  "exclude": [
    "src/build/*.ts",
    "./commitlint.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.build.json"
    },
    {
      "path": "./tsconfig.commitlint.json"
    }
  ]
}
